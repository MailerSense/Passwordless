<div>
  <.form
    id="edit-org-form"
    for={@form}
    phx-target={@myself}
    phx-submit="save"
    phx-change="validate"
  >
    <.field
      field={@form[:name]}
      placeholder={gettext("e.g. YourOrg")}
      autocomplete="organization"
      required
      required_asterix={false}
    />
    <.field
      type="email"
      field={@form[:email]}
      placeholder={gettext("e.g. you@org.com")}
      autocomplete="email"
      required
      required_asterix={false}
    />

    <div class="flex items-center justify-between">
      <.a
        :if={@action == :edit}
        to={~p"/app/organization/new"}
        label={gettext("Create new organization")}
        class="text-sm underline text-slate-600 dark:text-slate-300"
        link_type="live_redirect"
      />

      <.button
        icon={if @action == :new, do: "remix-add-circle-line", else: "remix-save-line"}
        label={if @action == :new, do: "Create organization", else: "Save changes"}
        disabled={not @form.source.valid?}
      />
    </div>
  </.form>
</div>
