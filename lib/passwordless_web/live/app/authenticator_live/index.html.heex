<.layout
  current_user={@current_user}
  current_page={:authenticators}
  current_section={:app}
  padded={false}
>
  <.pilled_layout current_page={@live_action} menu_items={authenticator_menu_items()}>
    <:header>
      <.page_header title={gettext("Authenticators")} />
    </:header>
    <.live_component id={@live_action} app={@current_app} module={@module} />
  </.pilled_layout>
</.layout>
