<%= if @step == :sign_in do %>
  <.auth_layout id="sign-in-layout" title={gettext("Sign in")}>
    <:logo>
      <.logo_icon class="w-12 h-12" />
    </:logo>

    <:top_links>
      {gettext("Don't have an account?")}
      <.link class="text-blue-600 dark:text-blue-300 font-semibold" navigate={~p"/auth/sign-up"}>
        {gettext("Sign up")}
      </.link>
    </:top_links>

    <.auth_providers mode={:sign_in} conn_or_socket={@socket} />

    <.form id="sign-in-form" for={@form} phx-change="validate_email" phx-submit="submit_email">
      <.field
        icon="remix-mail-fill"
        type="email"
        field={@form[:email]}
        label=""
        required
        required_asterix={false}
        autocomplete="email"
        placeholder={gettext("Enter your email address")}
      />

      <div class="flex mt-6">
        <.button
          size="xl"
          type="submit"
          label={gettext("Continue")}
          class="flex flex-1"
          phx-disable-with={gettext("Working...")}
          disabled={not @form.source.valid?}
        />
      </div>
    </.form>
  </.auth_layout>
<% end %>

<%= if @step == :otp_sent do %>
  <.auth_layout id="sign-in-layout" title={gettext("Sign in")}>
    <:logo>
      <.logo_icon class="w-12 h-12" />
    </:logo>

    <:top_links>
      {gettext("Don't have an account?")}
      <.link class="text-blue-600 dark:text-blue-300 font-semibold" navigate={~p"/auth/sign-up"}>
        {gettext("Sign up")}
      </.link>
    </:top_links>

    <div class="flex flex-col gap-6">
      <.p>
        {gettext(
          "We've sent a 6-digit code to %{email}. Enter it below to continue.",
          email: @auth_user.email
        )}
      </.p>
      <.form
        for={@token_form}
        action={~p"/auth/sign-in/passwordless/form"}
        phx-trigger-action={@trigger_submit}
        phx-change="validate_code"
      >
        <.otp_input name={@token_form[:code].name} label={gettext("Email OTP")} />
        <.input type="hidden" field={@token_form[:sign_in_token]} />
      </.form>

      <%= cond do %>
        <% @loading -> %>
          <.button size="xl" color="success" label={gettext("Success")} class="flex flex-1" />
        <% @resend_enabled -> %>
          <.button size="xl" type="button" phx-click="resend" with_icon class="flex flex-1">
            <.icon name="remix-reset-right-fill" />
            {gettext("Resend code")}
          </.button>
        <% true -> %>
          <.button size="xl" type="button" disabled with_icon class="flex flex-1">
            <.icon name="remix-reset-right-fill" />
            {gettext("Wait %{seconds} seconds to resend", seconds: @seconds_till_resend)}
          </.button>
      <% end %>
    </div>

    <:bottom_links>
      <.a
        class="text-sm text-slate-500 dark:text-slate-400"
        to={~p"/auth/sign-in/password"}
        link_type="live_patch"
      >
        {gettext("Password login")}
      </.a>
    </:bottom_links>
  </.auth_layout>
<% end %>
